@using ProjectGecko.Models
@model ProjectGecko.Models.Account

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}

@if (Model != null)
{
    <div class="postcontainer">
        @{ int postInt = 0; }
        @foreach (Post post in ViewBag.Posts)
        {
            <div class="post">
                <a class="prev" onclick="plusSlides(-1, @postInt)">&#10094;</a>
                <a class="next" onclick="plusSlides(1, @postInt)">&#10095;</a>
                <div class="postimages">
                    @foreach (string item in post.ImagePaths)
                    {
                        <img class="PostListingImage" src=@Url.Content(item) alt="Alternate Text" />
                    }
                </div>
                <p class="PostTitle">@post.Title by <span class="PosterName">@Account.GetAccount(post.PosterID).DisplayName</span></p>
            </div>
            { postInt += 1; }
        }
    </div>
}
else
{
    <div class="postcontainer">
        @{ int postInt = 0; }
        @foreach (Post post in ViewBag.Posts)
        {
            <div class="post">
                <a class="prev" onclick="plusSlides(-1, @postInt)">&#10094;</a>
                <a class="next" onclick="plusSlides(1, @postInt)">&#10095;</a>
                <div class="postimages">
                    @foreach (string item in post.ImagePaths)
                    {
                        <img class="PostListingImage" src=@Url.Content(item) alt="Alternate Text" />
                    }
                </div>
                <p class="PostTitle">@post.Title by <span class="PosterName">@Account.GetAccount(post.PosterID).DisplayName</span></p>
            </div>
            { postInt += 1; }
        }
    </div>
}
<script src="~/Js/SlideShowController.js"></script>